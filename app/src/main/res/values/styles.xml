<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Form styles -->
    <style name="AppTheme.Form.Title" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color00</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="AppTheme.Form.Label" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color00</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.Form.Subtitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color00_alpha50</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.Form.EditTextTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/color00</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Form.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:colorControlNormal">@color/color2</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_radius_8</item>
        <item name="android:backgroundTint">@color/color1</item>
        <item name="backgroundTint">@color/color1</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textColor">@color/color00</item>
        <item name="android:textColorHint">@color/color00_alpha50</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="AppTheme.Form.EditText.Login">
        <item name="backgroundTint">@color/color0_alpha15</item>
        <item name="android:backgroundTint">@color/color0_alpha15</item>
        <item name="android:textColor">@color/color0</item>
        <item name="android:textColorHint">@color/color0_alpha70</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="AppTheme.Form.EditText.Dropdown">
        <item name="android:drawableEnd">@drawable/icn_arrow_down</item>
        <item name="android:drawableTint">@color/color_main</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="AppTheme.Form.Title.EditTextTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Form.EditText.Multiline">
        <item name="android:singleLine">false</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:minLines">6</item>
    </style>

    <!-- Button styles -->
    <style name="AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/color0</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/color_main</item>
        <item name="backgroundTint">@color/color_main</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.Button.Login">
        <item name="android:backgroundTint">@color/color0</item>
        <item name="backgroundTint">@color/color0</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="AppTheme.Button.Border">
        <item name="strokeColor">@color/color_main</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="AppTheme.FloatingButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/color_main</item>
        <item name="srcCompat">@drawable/icn_add_fab</item>
    </style>

    <style name="AppTheme.RadioButton" parent="AppTheme.Form.Label">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:buttonTint">@color/color_main</item>
    </style>

    <!-- Other components -->
    <style name="AppTheme.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:elevation">8dp</item>
        <item name="itemIconTint">@color/selector_colormainalpha30_colormain</item>
        <item name="android:textColor">@color/selector_colormainalpha30_colormain</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextColor">@color/selector_colormainalpha30_colormain</item>
        <item name="itemTextAppearanceInactive">@style/AppTheme.BottomNavTextInactive</item>
        <item name="itemTextAppearanceActive">@style/AppTheme.BottomNavTextActive</item>
    </style>

    <style name="AppTheme.BottomNavTextInactive">
        <item name="android:text">10sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.BottomNavTextActive">
        <item name="android:text">10sp</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="AppTheme.CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.Rounded8dpImageView">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTheme.Rounded8dpBottomImageView">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="AppTheme.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="tabIndicator">@drawable/shape_tab_colormain</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:layout_height">32dp</item>
        <item name="tabRippleColor">@color/color1</item>
    </style>

    <style name="TextAppearance.Tab" parent="AppTheme.Button">
        <item name="fontFamily">@font/light</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color00</item>
    </style>

    <!-- Dialogs -->
    <style name="AppTheme.Dialog" />

    <style name="AppTheme.Dialog.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_radius_8</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:backgroundTint">@color/color0</item>
    </style>

    <style name="AppTheme.Dialog.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_marginTop">36dp</item>
    </style>

    <style name="AppTheme.Dialog.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="AppTheme.Dialog.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Dialog.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/color_main</item>
        <item name="android:drawableStart">@drawable/icn_search</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginEnd">13dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="AppTheme.Dialog.RecyclerView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>

    <style name="AppTheme.Dialog.CloseButton">
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/icn_close</item>
        <item name="android:tint">@color/selector_color00_color00_alpha50</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="AppTheme.Dialog.LinearLayoutButtons">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AppTheme.Dialog.Button.Positive" parent="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">132dp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AppTheme.Dialog.Button.Negative" parent="AppTheme.Dialog.Button.Positive">
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="AppTheme.Dialog.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.DialogBottomSheet.CloseButton" parent="AppTheme.Dialog">
        <item name="android:src">@null</item>
    </style>

    <!-- Action bar styles -->

    <!-- Android Toolbar Style -->
    <style name="AppTheme.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:navigationIcon">@drawable/icn_back</item>
        <item name="colorControlNormal">@color/selector_colormain_colormainalpha30</item>
        <item name="navigationIcon">@drawable/icn_back</item>
        <item name="android:colorControlNormal">@color/color_main</item>
        <item name="android:colorControlActivated">@color/color_main_alpha30</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:background">@color/color0</item>
        <item name="contentInsetStart">24dp</item>
    </style>
    <!-- Custom Toolbar styles -->
    <style name="AppTheme.ActionBarTheme">
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="AppTheme.ActionBar.Container">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/color1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
    </style>

    <style name="AppTheme.ActionBar.Title">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/color00</item>
    </style>

    <style name="AppTheme.ActionBar.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ActionBar.Button" />

    <style name="AppTheme.ActionBar.Button.Back">
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Action Overflow style -->
    <style name="ActionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/color00</item>
    </style>

    <!-- Progress bar -->
    <style name="AppTheme.Progressbar">
        <item name="android:indeterminateTint">@color/color2</item>
    </style>

    <!-- Override styles -->
    <style name="AppTheme.OnlyRecyclerview">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
    </style>

    <style name="AppTheme.OnlyFrameLayout" />

</resources>